<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/activity_mainheader"
        android:id="@+id/head"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/head">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount to be Added"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:textColor="@color/eightE"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â‚¹"
        android:textStyle="bold"
        android:id="@+id/tv_PaymentFinalAmount"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textColor="#1e1e1e"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/eightE"
        android:layout_marginTop="10dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/RL_PaytmPayment"
        android:visibility="gone"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/im_InviteFriends"
            android:layout_centerVertical="true"
            android:src="@drawable/paytm_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_InviteFriend"
            android:layout_marginLeft="20dp"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:text="Paytm"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/im_InviteFriends"
            android:layout_toLeftOf="@+id/im_arrow1"
            android:textColor="#1e1e1e" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:id="@+id/im_arrow1"
            android:src="@drawable/arrow_icon_pay" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:background="#dbdbdb"
        />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:id="@+id/RL_PayUMoneyPayment"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:id="@+id/im_PayUMoney"
                android:src="@drawable/wallet1_icon"
                android:drawableTint="@color/colorPrimary"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:text="PayUMoney"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/im_PayUMoney"
                android:layout_toLeftOf="@+id/im_arrow2"
                android:textColor="#1e1e1e" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:id="@+id/im_arrow2"
                android:src="@drawable/arrow_icon_pay" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:background="#dbdbdb"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RL_TrakNPayPayment"
            android:visibility="gone"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:id="@+id/im_TraknPay"
                android:src="@drawable/wallet1_icon"
                android:drawableTint="@color/colorPrimary"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:text="Trak N Pay"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/im_TraknPay"
                android:layout_toLeftOf="@+id/im_arrow3"
                android:textColor="#1e1e1e" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:id="@+id/im_arrow3"
                android:src="@drawable/arrow_icon_pay" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#dbdbdb"
            />
    </LinearLayout>







    </RelativeLayout>
</RelativeLayout>
