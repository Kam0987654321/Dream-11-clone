<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="5dp"
        android:id="@+id/RL_TransMain"
        android:elevation="0dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="12sp"
        android:textColor="#1e1e1e"
        android:textStyle="bold"
        android:maxLines="1"
        android:id="@+id/tv_RankTeamName"
        android:layout_toLeftOf="@+id/tv_RankRank"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rank"
        android:textSize="12sp"
        android:textColor="#1e1e1e"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:id="@+id/tv_RankRank"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:layout_marginLeft="10dp"
        />
        <TextView
            android:id="@+id/tv_RankPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_RankTeamName"
            android:layout_below="@+id/tv_RankTeamName"
            android:paddingBottom="10dp"
            android:paddingTop="5dp"
            android:text="Points"
            android:textColor="#1e1e1e"
            android:textSize="11sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dbdbdb"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/tv_RankPoints"/>
    </RelativeLayout>



</RelativeLayout>